{% extends "layout.twig" %}
{% block content %}
    <h2>Post</h2>
    <p>
        <a href="{{ 'admin/posts' | url }}" class="btn btn-info">Back</a>
    </p>
    {% if errors %}
        <div class="alert alert-danger">
            <ul>
                {% for input, messege in errors %}
                    <li>
                        {% for messege in messege %}
                        {{ input }}: {{ messege }}
                        {% endfor %}
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
    {% if result %}
        <div class="alert alert-success">Post save!</div>
    {% endif %}
    <form method="post">
        <div class="form-group">
            <label for="inputTitle">Title</label>
            <input type="text" name="title" id="inputTitle" class="form-control">
        </div>
        <textarea class="form-control" name="content" id="inputContent" rows="5"></textarea>
        <br>
        <input type="submit" name="save" value="save" class="btn btn-success">
    </form>
{% endblock %}
