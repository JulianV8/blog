{% extends "layout.twig" %}
{% block content %}
    <h2>New User</h2>
    <p>
        <a href="{{ 'admin/users' | url }}" class="btn btn-info">Back</a>
    </p>
    {% if errors %}
        <div class="alert alert-danger">
            <ul>
                {% for input, messege in errors %}
                    <li>
                        {% for messege in messege %}
                        {{ input }}: {{ messege }}
                        {% endfor %}
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
    {% if result %}
        <div class="alert alert-success">User save!</div>
    {% endif %}
    <form method="post">
        <div class="form-group">
            <label for="inputCedula">Name</label>
            <input type="text" name="cedula" id="inputCedula" class="form-control">
        </div>
        <div class="form-group">
            <label for="inputNombre">Email</label>
            <input type="text" name="nombre" id="inputNombre" class="form-control">
        </div>
        <div class="form-group">
            <label for="inputEmail">Email</label>
            <input type="text" name="email" id="inputEmail" class="form-control">
        </div>
        <div class="form-group">
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control">
        </div>
        <br>
        <input type="submit" name="save" value="save" class="btn btn-success">
    </form>
{% endblock %}
